 * 
 * German QWERTZ Layout for Corne Choc Pro BT with OLED displays
 * Matches German keyboard layout as closely as possible
 * Optimized for macOS + AeroSpace
 * 
 * Layer Structure:
 * 0: QWERTZ (Base) - German layout with Umlauts
 * 1: Numbers + German Special Characters (Lower) - CORRECTED FOR macOS-DEUTSCH
 * 2: F-Keys + Navigation (Raise)
 * 3: AeroSpace Window Management (Lower + Raise)
 * 4: Adjust (Media, Bluetooth, System)
 */

#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
    chosen {
        zmk,physical-layout = &default_layout;
    };

    // Conditional layer for AeroSpace
    conditional_layers {
        compatible = "zmk,conditional-layers";
        tri_layer {
            if-layers = <1 2>;
            then-layer = <3>;
        };
    };
};

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            display-name = "QWERTZ";
            // -----------------------------------------------------------------------------------------
            // German QWERTZ Base Layer
            // |  TAB |  Q  |  W  |  E  |  R  |  T  | NONE | NONE |  Z  |  U  |  I  |  O  |  P  |  Ü  |
            // |  ESC |  A  |  S  |  D  |  F  |  G  | NONE | NONE |  H  |  J  |  K  |  L  |  Ö  |  Ä  |
            // | SHFT |  Y  |  X  |  C  |  V  |  B  |              |  N  |  M  |  ,  |  .  |  -  | SHFT|
            //                    | CMD | LWR | SPC |              | ENT | RSE | ALT |
            //
            // Note: macOS should be set to "German" keyboard layout
            // Ü = LBKT, Ö = SEMI, Ä = SQT
            bindings = <
                &kp TAB   &kp Q &kp W &kp E &kp R &kp T &none &none &kp Z &kp U  &kp I     &kp O   &kp P     &kp LBKT
                &kp ESC   &kp A &kp S &kp D &kp F &kp G &none &none &kp H &kp J  &kp K     &kp L   &kp SEMI  &kp SQT
                &kp LSHFT &kp Y &kp X &kp C &kp V &kp B             &kp N &kp M  &kp COMMA &kp DOT &kp MINUS &kp RSHFT
                                      &kp LGUI &mo 1 &kp SPACE       &kp RET &mo 2 &kp LALT
            >;
        };

        lower_layer {
            display-name = "NUMBER";
            // -----------------------------------------------------------------------------------------
            // Numbers and German Special Characters - CORRECTED FOR macOS-DEUTSCH
            // |  ^  |  1  |  2  |  3  |  4  |  5  | NONE | NONE |  6  |  7  |  8  |  9  |  0  |  ß  |
            // |  °  |  !  |  "  |  §  |  $  |  %  | NONE | NONE |  &  |  /  |  (  |  )  |  =  |  ?  |
            // |  ¶  |  ¡  |  "  |  ¢  |  [  |  ]  |              |  {  |  }  |  |  |  '  |  ≠  |  ¿  |
            //                    | CMD |  ▼  | SPC |              | ENT |     | ALT |
            //
            // CRITICAL CHANGES for macOS-Deutsch:
            // - GRAVE → EQUAL (^ statt <)
            // - LS(GRAVE) → LS(EQUAL) (° statt >)
            // - All Row 2 positions use RA(Nx) for German special chars
            // - MINUS stays MINUS (produces ß on German layout)
            bindings = <
                &kp EQUAL        &kp N1           &kp N2       &kp N3      &kp N4      &kp N5        &none &none &kp N6       &kp N7       &kp N8              &kp N9              &kp N0       &kp MINUS
                &kp LS(EQUAL)    &kp EXCL         &kp LS(N2)   &kp LS(N3)  &kp DLLR    &kp PRCNT     &none &none &kp LS(N6)   &kp LS(N7)   &kp LS(N8)          &kp LS(N9)          &kp LS(N0)   &kp LS(MINUS)
                &kp RA(N7)       &kp RA(N1)       &kp RA(N2)   &kp RA(N4)  &kp RA(N5)  &kp RA(N6)              &kp RA(N8)   &kp RA(N9)   &kp RA(L)           &kp LS(NON_US_HASH) &kp RA(N0)   &kp RA(LS(MINUS))
                                                               &kp LGUI &trans &kp SPACE             &kp RET &trans &kp LALT
            >;
        };

        raise_layer {
            display-name = "RAISE";
            // -----------------------------------------------------------------------------------------
            // F-Keys and Navigation
            // |  F1 |  F2 |  F3 |  F4 |  F5 |  F6 | NONE | NONE |  F7 |  F8 |  F9 | F10 | F11 | F12 |
            // | TAB | ESC | CTRL| SHFT| ALT |     | NONE | NONE |  ←  |  ↓  |  ↑  |  →  |BSPC | DEL |
            // | SHFT|     |     |     |     |     |              | HOME| PGDN| PGUP| END |     | SHFT|
            //                    | CMD |     | SPC |              | ENT |  ▼  | ALT |
            bindings = <
                &kp F1    &kp F2   &kp F3    &kp F4    &kp F5   &trans &none &none &kp F7   &kp F8    &kp F9    &kp F10   &kp F11  &kp F12
                &kp TAB   &kp ESC  &kp LCTRL &kp LSHFT &kp LALT &trans &none &none &kp LEFT &kp DOWN  &kp UP    &kp RIGHT &kp BSPC &kp DEL
                &kp LSHFT &trans   &trans    &trans    &trans   &trans             &kp HOME &kp PG_DN &kp PG_UP &kp END   &trans   &kp RSHFT
                                             &kp LGUI &trans &kp SPACE             &kp RET &trans &kp LALT
            >;
        };

        aerospace_layer {
            display-name = "AEROSP";
            // -----------------------------------------------------------------------------------------
            // AeroSpace Window Management Layer (Lower + Raise)
            // | HP+/ | HP+1| HP+2| HP+3| HP+4| HP+5| NONE | NONE | HP+6| HP+7| HP+8| HP+9|     |      |
            // |      | HP+A| HP+S| HP+D| HP+F| HP+G| NONE | NONE | HP+H| HP+J| HP+K| HP+L|HP+TAB|    |
            // |      | HP+Z| HP+X| HP+C| HP+V| HP+B|              | HP+N| HP+M| HP+,| HP+.| HP+P|     |
            //                    | CMD |     | SPC |              | ENT |     | ALT |
            bindings = <
                &kp LC(LA(LG(LS(FSLH)))) &kp LC(LA(LG(LS(N1)))) &kp LC(LA(LG(LS(N2)))) &kp LC(LA(LG(LS(N3)))) &kp LC(LA(LG(LS(N4)))) &kp LC(LA(LG(LS(N5)))) &none &none &kp LC(LA(LG(LS(N6)))) &kp LC(LA(LG(LS(N7)))) &kp LC(LA(LG(LS(N8)))) &kp LC(LA(LG(LS(N9)))) &trans &trans
                &trans                   &kp LC(LA(LG(LS(A))))  &kp LC(LA(LG(LS(S))))  &kp LC(LA(LG(LS(D))))  &kp LC(LA(LG(LS(F))))  &kp LC(LA(LG(LS(G))))  &none &none &kp LC(LA(LG(LS(H))))  &kp LC(LA(LG(LS(J))))  &kp LC(LA(LG(LS(K))))  &kp LC(LA(LG(LS(L))))  &kp LC(LA(LG(LS(TAB)))) &trans
                &trans                   &kp LC(LA(LG(LS(Z))))  &kp LC(LA(LG(LS(X))))  &kp LC(LA(LG(LS(C))))  &kp LC(LA(LG(LS(V))))  &kp LC(LA(LG(LS(B))))            &kp LC(LA(LG(LS(N))))  &kp LC(LA(LG(LS(M))))  &kp LC(LA(LG(LS(COMMA)))) &kp LC(LA(LG(LS(DOT)))) &kp LC(LA(LG(LS(P)))) &trans
                                                                                       &kp LGUI &trans &kp SPACE                                          &kp RET &trans &kp LALT
            >;
        };

        adjust_layer {
            display-name = "ADJUST";
            // -----------------------------------------------------------------------------------------
            // System, Media, and Bluetooth
            // |      | F1  | F2  | F3  | F4  | F5  | NONE | NONE | F6  | F7  | F8  | F9  | F10 |      |
            // |      | F11 | F12 |  W  |  T  |ENTER| NONE | NONE | LFT | DWN |  UP | RGT | F11 | F12  |
            // |      |BTCLR| BT1 | BT2 | BT3 | BT4 |              |  R  |  B  |EQUAL|MINUS| RST | BOOT |
            //                    | CMD |     | SPC |              | ENT |     | ALT |
            //
            // Additional AeroSpace shortcuts:
            // W = close window, T = toggle floating/tiling, ENTER = fullscreen
            // R = layout accordion, B = balance sizes
            // EQUAL/MINUS = resize width
            bindings = <
                &trans &kp F1     &kp F2          &kp F3                    &kp F4                    &kp F5                    &none &none &kp F6                    &kp F7                 &kp F8                    &kp F9                    &kp F10 &trans
                &trans &kp F11    &kp F12         &kp LC(LA(LG(LS(W))))     &kp LC(LA(LG(LS(T))))     &kp LC(LA(LG(LS(ENTER)))) &none &none &kp LEFT                  &kp DOWN               &kp UP                    &kp RIGHT                 &kp F11 &kp F12
                &trans &bt BT_CLR &bt BT_SEL 0    &bt BT_SEL 1              &bt BT_SEL 2              &bt BT_SEL 3                    &kp LC(LA(LG(LS(R)))) &kp LC(LA(LG(LS(B)))) &kp LC(LA(LG(LS(EQUAL)))) &kp LC(LA(LG(LS(MINUS)))) &sys_reset  &bootloader
                                                  &kp LGUI &trans &kp SPACE                                                               &kp RET &trans &kp LALT
            >;
        };
    };
};
